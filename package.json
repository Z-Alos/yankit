{
  "name": "Yankit",
  "private": true,
  "version": "0.0.1",
  "description": "The ultimate app for modern tech wizards.",
  "author": "Zalos Private Limited",
  "type": "module",
  "main": "main.js",
  "build": {
    "appId": "com.zalosPrivatedLimited.yankit",
    "productName": "Yankit",
    "asar": true,
    "asarUnpack": [
      "bin/**/*",
       "node_modules/yt-dlp-exec/**/*"
    ],
    "files": [
      "main.js",
      "dist/**/*",
      "server.js",
      "bin/**/*",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/"
      }
    ],
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Yankit"
  },
    "mac": {
      "target": "dmg"
    }
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "electron:build": "electron-builder --linux --win",
    "start": "electron ."
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "yt-dlp-exec": "^1.0.2"
  },
  "devDependencies": {
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "electron-forge-plugin-vite": "^0.6.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  }
}
